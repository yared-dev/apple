<script type="text/javascript">

const img=document.getElementsByClassName('card-img-top ');
const horario=document.getElementsByClassName('row_hora');
const sigueme=document.getElementById('#siguenos')
const nav=document.getElementById('navbar');
const h6=document.getElementsByClassName('h_6');
const text_horario=document.getElementsByClassName('text_horario');
const date = Date.now();
const fecha = new Date(date);

window.onscroll=()=>{
  
    nav.style.backdropFilter='saturate(180%) blur(20px)';   
    const posY=window.scrollY;
    if(posY>130 && posY<600){
    img[0].style.transition='opacity 0.5s ease 0s';
    img[0].style.transform ='translateZ(0px)';
    img[0].style.opacity='1';
    }else if(posY>500 && posY<900){
    img[1].style.transition='opacity 0.5s ease 0s';
    img[1].style.transform ='translateZ(0px)';
    img[1].style.opacity='1';
    }else if(posY>1010){
    img[2].style.transition='opacity 0.5s ease 0s'
    img[2].style.transform ='translateZ(0px)';
    img[2].style.opacity='1';
    }
}    
if(fecha.getDay()===1){
    horario[0].style.background='#171717'
    h6[0].style.color="white"
    text_horario[0].style.color="white"
}else if(fecha.getDay()===2){
    horario[1].style.background='#171717'
    h6[1].style.color="white"
    text_horario[1].style.color="white"
}else if(fecha.getDay()===3){
    horario[2].style.background='#171717'
    h6[2].style.color="white"
    text_horario[2].style.color="white"
}else if(fecha.getDay()===4){
    horario[3].style.background='#171717'   
    h6[3].style.color="white"
    text_horario[3].style.color="white"
}else if(fecha.getDay()===5){
    horario[4].style.background='#171717'    
    h6[4].style.color="white"
    text_horario[4].style.color="white"
}else if(fecha.getDay()===6){
    horario[5].style.background='#171717'
    h6[5].style.color="white"
    text_horario[5].style.color="white"
}else if(fecha.getDay()===0){
    horario[6].style.background='#171717'
    h6[6].style.color="white"
    text_horario[6].style.color="white"
}

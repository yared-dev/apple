<div class="table-responsive">
  <div class="table-wrapper">
    <div class="table-title">
      <div class="row">
        <div class="col-sm-5">
          <h2>Green <b>Apple</b></h2>
        </div>
      </div>
    </div>
    <table class="table table-responsive table-striped table-hover">
      <thead>
        <tr>
          <th>Cliente</th>
          <th>Modelo</th>
          <th>Telefono</th>
          <th>Precio</th>
          <th>Descripcion</th>
          <th>Urgencia</th>
          <th>Empleador</th>
          <th>Fecha</th>
          <th>Descuento</th>
        </tr>
      </thead>
      <tbody>
        {{#each jobsCheck}}
          <tr>
            <td class="jobtd">
              <div>
                <a href="#">{{name}}</a>
              </div>
            </td>
            <td>{{modelo}}</td>
            <td>{{telf}}</td>
            <td>{{precio}}</td>
            <td>{{description}}</td>
            <td>{{urgencia}}</td>
            <td>
              {{trabajador}}
            </td>
            <td class="date">{{date}}</td>

            <td><a
                href="/jobs/descuento/{{_id}}"
                class="edit"
                title="Edit"
                data-toggle="tooltip"
              >Descuento</a></td>

          </tr>

        {{else}}
          <div class="row rw">
            <div class="col">Agrega un titulo</div>
            <div class="col">lorem</div>
            <div class="col">
              <a><i class="fas fa-edit"></i></a>
              <a><i class="fas fa-trash"></i></a>
            </div>
          </div>
        {{/each}}
      </tbody>
    </table>
    <div class="clearfix">
      <ul class="pagination">
        <li class="nav-item">
          <a class="nav-link active" href="/jobs/all-job">Trabajo No Realizado</a>
        </li>

      </ul>
    </div>
  </div>
</div>
<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Editar Trabajo</h3>
    </div>
    <div class="card-body">
      <form action="/jobs/edit/{{dataJob._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT" />
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            name="name"
            placeholder="name"
            value="{{dataJob.name}}"
          />
        </div>
        <div class="form-group">
          <input
            type="number"
            class="form-control"
            name="telf"
            placeholder="telf"
            value="{{dataJob.telf}}"
          />
        </div>
        <div class="form-group">
          <input
            type="number"
            class="form-control"
            name="precio"
            placeholder="precio"
            value="{{dataJob.precio}}"
          />
        </div>
        <div class="form-group">
          <textarea
            class="form-control"
            name="description"
          >{{dataJob.description}}</textarea>
        </div>
        <div class="form-group btnformedit">
          <button class="btnForm btn btn-primary" type="submit">
            Editar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
<div class="row row_rw job">
  <div class="card">
    <div class="card-header">
      <h3>New note</h3>
    </div>
    <div class="card-body">
      <form action="/notes/new-notes" method="post" class="form-control">
        <div class="mb-3">
          <input
            type="text"
            name="title"
            class="form-control"
            placeholder="title"
            autofocus
          />
        </div>
        <div class="mb-3">
          <textarea
            name="description"
            class="form-control"
            placeholder="description"
          ></textarea>
        </div>
        <div class="mb-3">
          <button class="save btn btn-primary btn-lg" type="submit">Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
<div class="edit-div col-md-4 mx-auto">
  <div class="card editar_card">
    <div class="card-header">
      <h3>Editar Nota</h3>
    </div>
    <div class="card-body">
      <form
        action="/notes/edit-note/{{dataNota._id}}?_method=PUT"
        method="POST"
        class="edit-form"
      >
        <input type="hidden" name="_method" value="PUT" />
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            name="title"
            placeholder="title"
            value="{{dataNota.title}}"
          />
        </div>
        <div class="form-group">
          <textarea
            class="form-control"
            name="description"
          >{{dataNota.description}}</textarea>
        </div>
        <div class="form-group edit-btn">
          <button class="btnForm btn btn-primary" type="submit">
            Editar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
<div class="col-md-4 mx-auto">
	<div class="card edit_card">
		<div class="card-header">
			<h3>Editar Articulo</h3>
		</div>
		<div class="card-body m-2">
			<form
				action="/notes/productos/edit-articulo/{{dataNota._id}}?_method=PUT"
				method="POST"
			>
				<input type="hidden" name="_method" value="PUT" />

				<div class="form-group m-2">
					<p>TITULO</p>

					<input
						type="text"
						class="form-control"
						name="title"
						placeholder="title"
						value="{{dataNota.title}}"
					/>
				</div>

				<div class="form-group m-2">
					<p>Precio</p>

					<input
						type="text"
						class="form-control"
						name="precio"
						placeholder="title"
						value="{{dataNota.precio}}"
					/>
				</div>
				<div class="form-group m-2 d-none">
					<input
						type="text"
						class="form-control"
						name="note"
						placeholder="title"
						value="{{dataNota.note}}"
					/>
				</div>

				<div class="form-group m-2">
					<p>Cantidad</p>

					<input
						type="text"
						class="form-control"
						name="cant"
						placeholder="title"
						value="{{dataNota.cant}}"
					/>
				</div>


				<div class="form-group m-2">
					<p>Description</p>
					
					<textarea class="form-control" name="description">
{{dataNota.description}}</textarea
					>
				</div>
				<div class="form-group">
					<button class="btn btn-primary btnForm" type="submit">save</button>
				</div>
			</form>
		</div>
	</div>
</div>

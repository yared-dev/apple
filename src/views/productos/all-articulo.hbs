<div class="table-responsive">
  <div class="table-wrapper">
    <div class="table-title">
      <div class="row">
        <div class="col-sm-5">
          <h2>Green <b>Apple</b></h2>
        </div>
      </div>
    </div>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Producto</th>
          <th>Descripcion</th>
          <th>Precio</th>
          <th>Cantidad</th>          
          <th>Action</th>
          <th>
            <a href="/notes/productos/add/{{id}}"><i
                class="fas fa-user-plus"
              ></i></a>
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each articuloCount}}
          <tr>
            <td>1</td>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td>{{precio}}</td>
            <td>{{cant}}</td>
            <td>
              <form
                class="formulario"
                action="/notes/productos/delete/{{_id}}?_method=DELETE"
                method="POST"
              >
                <a
                  href="/notes/productos/edit/{{_id}}"
                  class="edit"
                  title="Edit"
                  data-toggle="tooltip"
                ><i class="material-icons">&#xE254;</i></a>
                <input type="hidden" name="_method" value="DELETE" />
                <button type="submit" class="btn btn_1">
                  <a href="" class="delete">
                    <i class="material-icons">&#xE872;</i>
                  </a>
                </button>
                <input type="hidden" value={{note}} name="note" />
              </form>
            </td>
          </tr>
        {{else}}
          <div class="row rw">
            <div class="col">Agrega un titulo</div>
            <div class="col">lorem</div>
            <div class="col">Agrega un precio</div>
            <div class="col">
              <a><i class="fas fa-edit"></i></a>
              <a><i class="fas fa-trash"></i></a>
            </div>
          </div>
        {{/each}}
      </tbody>
    </table>
      <div class="clearfix">
      <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
      <ul class="pagination">
        <li>
          <div class="total">
            <form action="/notes/productos/total/{{id}}" method="GET">
              <button type="submit" class="btn-total">
                <a  class="a-total">Total</a>
              </button>
          </div>
            </form>            
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="/about">about</a>
        </li>
 
        <li class="page-item active"><a href="#" class="page-link">3</a></li>
        <li class="page-item"><a href="#" class="page-link">Next</a></li>
      </ul>
      </div>
  </div>
</div>